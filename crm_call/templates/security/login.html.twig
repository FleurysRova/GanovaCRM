{% extends 'base.html.twig' %}

{% block title %}Connexion | Zanova CRM{% endblock %}

{% block stylesheets %}
<style>
/* Global Reset & Base Styles */
:root {
    --primary: #2563eb;
    --primary-hover: #1d4ed8;
    --secondary: #7c3aed;
    --accent: #8b5cf6;
    --bg-dark: #0f172a;
    --bg-light: #f8fafc;
    --surface: rgba(255, 255, 255, 0.95);
    --text-main: #0f172a;
    --text-muted: #64748b;
    --border: #e2e8f0;
    --radius: 16px;
    --shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --glass-border: rgba(255, 255, 255, 0.2);
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Inter', sans-serif !important;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-main);
    padding: 2rem;
    position: relative;
    overflow: hidden;
}

/* Animations Premium */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-10px);
    }
}

.animate-fade-in {
    animation: fadeIn 0.8s ease-out;
}

.animate-slide-up {
    animation: slideUp 0.6s ease-out;
}

/* Glass Card Premium */
.glass-card-premium {
    background: rgba(255, 255, 255, 0.85) !important;
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
        0 32px 64px rgba(0, 0, 0, 0.1),
        0 16px 32px rgba(0, 0, 0, 0.05),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    position: relative;
}

.glass-card-premium::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.8), 
        transparent
    );
}

/* Input Groups Premium */
.input-group-premium {
    position: relative;
}

.input-group-premium:focus-within label {
    color: var(--primary);
    transform: translateY(-2px);
}

.input-premium {
    width: 100% !important;
    padding: 1rem 1.25rem !important;
    font-size: 1rem !important;
    font-family: inherit !important;
    border: 2px solid transparent !important;
    border-radius: 16px !important;
    background: linear-gradient(white, white) padding-box,
                linear-gradient(135deg, #e2e8f0, #cbd5e1) border-box !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    color: var(--text-main) !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05) !important;
}

.input-premium:focus {
    outline: none !important;
    border-image: linear-gradient(135deg, var(--primary), var(--secondary)) 1 !important;
    box-shadow: 
        0 0 0 4px rgba(37, 99, 235, 0.1),
        0 8px 16px -4px rgba(0, 0, 0, 0.1) !important;
    transform: translateY(-2px);
}

.input-premium::placeholder {
    color: #94a3b8 !important;
    font-weight: 400;
}

/* Checkbox Premium */
.checkbox-premium {
    appearance: none !important;
    width: 20px !important;
    height: 20px !important;
    border: 2px solid #d1d5db !important;
    border-radius: 6px !important;
    background: white !important;
    cursor: pointer !important;
    position: relative !important;
    transition: all 0.2s ease !important;
}

.checkbox-premium:checked {
    background: linear-gradient(135deg, var(--primary), var(--secondary)) !important;
    border-color: var(--primary) !important;
}

.checkbox-premium:checked::after {
    content: '✓' !important;
    position: absolute !important;
    top: 50% !important;
    left: 50% !important;
    transform: translate(-50%, -50%) !important;
    color: white !important;
    font-size: 12px !important;
    font-weight: bold !important;
}

.checkbox-premium:hover {
    border-color: var(--primary) !important;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1) !important;
}

/* Alerts Premium */
.alert-premium {
    padding: 1rem 1.25rem !important;
    border-radius: 12px !important;
    margin-bottom: 1.5rem !important;
    font-size: 0.875rem !important;
    display: flex !important;
    align-items: center !important;
    font-weight: 500 !important;
    border: 1px solid !important;
    position: relative !important;
    overflow: hidden !important;
}

.alert-premium::before {
    content: '' !important;
    position: absolute !important;
    left: 0 !important;
    top: 0 !important;
    bottom: 0 !important;
    width: 4px !important;
}

.alert-danger-premium {
    background: linear-gradient(135deg, #fef2f2, #fee2e2) !important;
    color: #991b1b !important;
    border-color: #fecaca !important;
}

.alert-danger-premium::before {
    background: linear-gradient(180deg, #ef4444, #dc2626) !important;
}

.alert-info-premium {
    background: linear-gradient(135deg, #eff6ff, #dbeafe) !important;
    color: #1e40af !important;
    border-color: #bfdbfe !important;
}

.alert-info-premium::before {
    background: linear-gradient(180deg, #3b82f6, #2563eb) !important;
}

/* Button Premium */
.btn-premium {
    position: relative !important;
    overflow: hidden !important;
}

.btn-premium::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: -100% !important;
    width: 100% !important;
    height: 100% !important;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.2), 
        transparent
    ) !important;
    transition: left 0.5s ease !important;
}

.btn-premium:hover::before {
    left: 100% !important;
}

.btn-premium:active {
    transform: scale(0.98) !important;
}

/* Links Premium */
a {
    color: var(--primary) !important;
    text-decoration: none !important;
    transition: all 0.2s ease !important;
    position: relative !important;
}

a:hover {
    transform: translateY(-1px) !important;
}

/* Background Effects */
body::before {
    content: '' !important;
    position: absolute !important;
    width: 600px !important;
    height: 600px !important;
    background: radial-gradient(circle, rgba(37, 99, 235, 0.1) 0%, transparent 70%) !important;
    top: -200px !important;
    right: -100px !important;
    z-index: -1 !important;
    animation: float 6s ease-in-out infinite;
}

body::after {
    content: '' !important;
    position: absolute !important;
    width: 400px !important;
    height: 400px !important;
    background: radial-gradient(circle, rgba(124, 58, 237, 0.08) 0%, transparent 70%) !important;
    bottom: -100px !important;
    left: -100px !important;
    z-index: -1 !important;
    animation: float 8s ease-in-out infinite reverse;
}

/* Responsive Design */
@media (max-width: 768px) {
    .glass-card-premium {
        padding: 2rem !important;
        border-radius: 20px !important;
        margin: 1rem !important;
    }
    
    body {
        padding: 1rem !important;
    }
    
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }
}

@media (max-width: 480px) {
    .glass-card-premium {
        padding: 1.5rem !important;
        border-radius: 16px !important;
    }
    
    .input-premium {
        padding: 0.875rem 1rem !important;
    }
}
</style>
{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-4 relative overflow-hidden">
        <!-- Background premium avec gradients -->
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-purple-50"></div>
        <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-blue-400/20 to-indigo-600/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-tl from-purple-400/20 to-pink-600/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10 max-w-md w-full">
            <!-- Logo / Header Premium -->
            <div class="text-center mb-8 animate-fade-in">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-3xl shadow-2xl mb-6 transform hover:scale-105 transition-all duration-500">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 17L12 22L22 17" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 12L12 17L22 12" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
                <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-2">Zanova CRM</h1>
                <p class="text-gray-500 font-medium">Accédez à votre espace de travail</p>
            </div>

            <!-- Carte Premium -->
            <div class="glass-card-premium rounded-3xl p-8 md:p-10 shadow-2xl border border-white/20 backdrop-blur-xl">
                <form method="post" class="space-y-6">
                    {% if error %}
                        <div class="alert-premium alert-danger-premium animate-slide-up">
                            <div class="flex items-center">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="flex-shrink-0 mr-3">
                                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                                    <line x1="12" y1="8" x2="12" y2="12" stroke="currentColor" stroke-width="2"/>
                                    <line x1="12" y1="16" x2="12.01" y2="16" stroke="currentColor" stroke-width="2"/>
                                </svg>
                                <span class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                            </div>
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert-premium alert-info-premium animate-slide-up">
                            <div class="flex items-center justify-between">
                                <span>Connecté en tant que <strong class="font-semibold">{{ app.user.userIdentifier }}</strong></span>
                                <a href="{{ path('app_logout') }}" class="text-indigo-600 hover:text-indigo-700 font-medium transition-colors">Déconnexion</a>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Champ Email Premium -->
                    <div class="input-group-premium">
                        <label for="inputEmail" class="block text-sm font-bold text-gray-700 mb-3 transition-all">Adresse e-mail</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="2" y="4" width="20" height="16" rx="2"/>
                                    <path d="m22 7-10 5L2 7"/>
                                </svg>
                            </div>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                                class="input-premium pl-12 pr-4 py-4 w-full" 
                                autocomplete="email" required autofocus 
                                placeholder="nom@entreprise.com">
                        </div>
                    </div>

                    <!-- Champ Mot de passe Premium -->
                    <div class="input-group-premium">
                        <div class="flex justify-between items-center mb-3">
                            <label for="inputPassword" class="block text-sm font-bold text-gray-700 transition-all">Mot de passe</label>
                            <a href="#" class="text-sm font-semibold text-indigo-600 hover:text-indigo-500 transition-colors">Mot de passe oublié ?</a>
                        </div>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                    <path d="M7 11V7a5 5 0 0110 0v4"/>
                                </svg>
                            </div>
                            <input type="password" name="password" id="inputPassword" 
                                class="input-premium pl-12 pr-4 py-4 w-full" 
                                autocomplete="current-password" required 
                                placeholder="••••••••">
                        </div>
                    </div>

                    <!-- Options supplémentaires -->
                    <div class="flex items-center">
                        <input id="remember_me" name="_remember_me" type="checkbox"
                            class="checkbox-premium h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer">
                        <label for="remember_me" class="ml-3 block text-sm font-medium text-gray-700 cursor-pointer select-none">
                            Rester connecté
                        </label>
                    </div>

                    <!-- CSRF Token -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Bouton Premium -->
                    <button type="submit" 
                        class="btn-premium group relative w-full flex justify-center py-4 px-6 text-base font-bold rounded-2xl text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-4 focus:ring-indigo-500/50 transition-all duration-300 transform active:scale-95 shadow-xl hover:shadow-2xl">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-5">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="text-white/80 group-hover:text-white transition-colors">
                                <path d="M9 12l2 2 4-4"/>
                                <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
                                <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
                                <path d="M3 12c0 4.5 3.5 8 8 8"/>
                                <path d="M21 12c0 4.5-3.5 8-8 8"/>
                            </svg>
                        </span>
                        Accéder au système
                    </button>
                </form>

                <!-- Pied de carte premium -->
                <div class="mt-8 pt-6 border-t border-gray-100/50 text-center">
                    <p class="text-sm text-gray-600">
                        Besoin d'un accès ? 
                        <a href="#" class="font-bold text-transparent bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text hover:from-indigo-700 hover:to-purple-700 transition-all">Contacter l'administrateur</a>
                    </p>
                </div>
            </div>

    <footer class="fixed bottom-0 left-0 right-0 p-4 bg-white/10 backdrop-blur-sm border-t border-white/10 text-center z-50">
        <p class="text-gray-500 text-xs font-medium">
            &copy; {{ "now"|date("Y") }} Zanova Entreprise • Système de gestion CRM haute performance
            <span class="ml-2 px-2 py-0.5 bg-indigo-500/10 text-indigo-400 rounded text-[10px]">v2.1.0</span>
        </p>
    </footer>
{% endblock %}
