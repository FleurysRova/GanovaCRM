<div class="card bg-white dark:bg-gray-800 border-0 shadow-lg hover:shadow-xl transition-all duration-300 rounded-2xl overflow-hidden group">
	<div class="card-body p-4">
		<div class="d-flex align-items-center justify-content-between mb-3">
			<div class="icon-box {{ icon_bg|default('bg-blue-100 dark:bg-blue-900') }} rounded-xl p-3 group-hover:scale-110 transition-transform">
				<i class="{{ icon|default('fas fa-chart-line') }} {{ icon_color|default('text-blue-600 dark:text-blue-400') }} text-xl"></i>
			</div>
			{% if trend|default(false) %}
				<span class="badge {{ trend_bg|default('bg-success-subtle text-success dark:bg-success-dark dark:text-success-light') }} rounded-pill px-3 py-1">
					<i class="fas fa-arrow-{{ trend_dir|default('up') }} text-xs me-1"></i>
					{{ trend }}
				</span>
			{% endif %}
		</div>
		<h6 class="text-gray-500 dark:text-gray-400 text-uppercase fw-semibold mb-2">{{ label|default('') }}</h6>
		<h3 class="fw-bold text-gray-800 dark:text-gray-100 mb-0" id="{{ id|default('') }}">{{ value|default('0') }}</h3>
		<p class="text-gray-500 dark:text-gray-400 small mb-0 mt-2" id="{{ status_id|default('') }}">{{ status|default('') }}</p>
	</div>
	{% if show_progress|default(false) %}
		<div class="progress bg-gray-100 dark:bg-gray-700 h-1">
			<div class="progress-bar {{ progress_bg|default('bg-gradient-to-r from-blue-500 to-blue-600') }}" id="{{ progress_id|default('') }}" style="width: {{ progress_value|default('0') }}%"></div>
		</div>
	{% endif %}
</div>
