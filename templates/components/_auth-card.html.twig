<div id="auth-screen" class="screen animate-fade-in {{ authenticated|default(false) ? 'hidden' : '' }}">
	<div class="auth-card">
		<div class="auth-header">
			<div class="logo-circle">Z</div>
			<h1>Zanova<span class="accent">CRM</span>
			</h1>
			<p>Système de gestion haute performance</p>
		</div>

		<div class="auth-body">
			<div id="auth-error" class="hidden alert-box error">{{ error|default('') }}</div>

			<div class="input-group">
				<label>Email Professionnel</label>
				<input type="email" id="email" value="{{ last_username|default('admin@zanova.com') }}" placeholder="nom@zanova.com">
			</div>

			<div class="input-group">
				<label>Mot de passe</label>
				<input type="password" id="password" value="admin123" placeholder="••••••••">
			</div>

			<button id="btn-login" class="btn-glow" onclick="App.login()">
				<i class="fas fa-sign-in-alt"></i>
				<span>Accéder à la plateforme</span>
			</button>
		</div>
		<div class="auth-footer">
			<button onclick="App.toggleTheme()" class="btn-theme-minimal">
				<i class="fas fa-palette"></i>
				Changer de mode</button>
		</div>
	</div>
</div>
